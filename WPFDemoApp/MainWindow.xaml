<Window x:Class="WPFDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemoApp"
        mc:Ignorable="d"
        Title="DemoApp" Height="450" Width="795">
    <Window.Resources>
        <!-- Style for custom buttons -->
        <Style x:Key="RoundedButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="Gray"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
    </Window.Resources>

    <Grid Background="DarkGray">
        <TabControl Background="DarkGray">
            <!-- First Tab: To Do List -->
            <TabItem Background="DarkGray" Header="To Do List">
                <Grid Margin="0,0,-1,0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Label to display "To Do List" -->
                    <Label FontFamily="Times New Roman" Foreground="White" Content="To Do List" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="24" FontWeight="Bold"/>

                    <!-- Grid to hold TextBox, Button and Search Label -->
                    <Grid Grid.Row="1" Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <TextBox BorderBrush="Black" BorderThickness="1" x:Name="InputTextBox" Margin="54,6,0,4" HorizontalAlignment="Left" Width="690"/>
                        <Button Content="Add" Width="49" Margin="0,4,0,4" HorizontalAlignment="Left" Click="AddButton_Click"/>
                        <Label Content="Search:" Grid.Row="2" Grid.Column="0" Margin="0,21,0,-47"/>
                        <TextBox x:Name="Search_Box" Grid.Row="1" Grid.Column="0" Margin="54,25,10,-25" Grid.RowSpan="2" TextChanged="Search_Box_TextChanged"></TextBox>
                    </Grid>

                    <!-- Border around the ItemsControl -->
                    <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Margin="10,43,22,10" Padding="10" Background="Gray">
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding TextContentList}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <!-- Grid to hold TextBlock and Buttons -->
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <!-- TextBlock to display each item in the TextContentList -->
                                            <CheckBox Grid.Column="0" VerticalAlignment="Center" Margin="5 0"></CheckBox>
                                            <TextBlock Grid.Column="1" VerticalAlignment="Center" Foreground="White" Text="{Binding}" FontFamily="Trebuchet MS" FontSize="14"/>
                                            <!-- Buttons -->
                                            <Button x:Name="Delete_Button" Foreground="Black" Background="LightGray" Grid.Column="2"
                                               Content="DELETE" Margin="10" Click="DeleteButton_Click"
                                               Style="{StaticResource RoundedButtonStyle}" CommandParameter="{Binding}"/>
                                        </Grid>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </TabItem>

            <!-- Second Tab: Edit -->
            <TabItem Background="DarkGray" Header="Edit">
                <!-- Add  edit controls here -->
            </TabItem>
        </TabControl>
    </Grid>
</Window>
