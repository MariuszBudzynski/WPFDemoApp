<Window x:Class="WPFDemoApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFDemoApp"
        mc:Ignorable="d"
        Title="DemoApp" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Label to display "To Do List" -->
        <Label Content="To Do List" HorizontalAlignment="Center" Margin="0,10,0,0" FontSize="24"/>

        <!-- ItemsControl to display the TextContentList -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding TextContentList}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- TextBlock to display each item in the TextContentList -->
                    <TextBlock Text="{Binding}" Margin="5"/>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Window>
